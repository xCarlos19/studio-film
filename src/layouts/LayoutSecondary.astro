---
import { ClientRouter } from 'astro:transitions';
import '@fontsource/courier-prime'
import '@fontsource-variable/oswald'
import Navbar from '../components/Navbar.tsx';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
  page: string;
}

const { title, page } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Somos un equipo de profesionales apasionados por el arte audiovisual, con experiencia en dirección, guion, fotografía y producción. Nos dedicamos a acompañar a actores y empresas en sus proyectos creativos." />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/webp" href="/logo-final.webp" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
    <ClientRouter />
	</head>
	<body>
		<div class="bg"></div>
    <Navbar client:load page={page}></Navbar>
    <main>
		<slot />
  </main>
  <Footer></Footer>
	</body>
</html>

<style>
	body {
  background-color: #DBD3D3;
  margin: 0;
  overflow-x: hidden;
}
.bg {
  position: fixed;
  z-index: -1;
  top: -50%;
  left: -50%;
  right: -50%;
  bottom: -50%;
  width: 200%;
  height: 200vh;
}

</style>

