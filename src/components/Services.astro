---
import Card from "./Card.astro";

const servicios = [
    {
        title: "FOTOBOOK ACTORAL",
        description: "Un fotobook profesional es tu principal carta de presentación como actor o actriz ante los directores de casting.",
        bg: "bg-blue-100",
        src:"/photo17.jpeg",
        href: "/servicios/fotobook"
    },
    {
        title: "VIDEOBOOK",
        description: "Un videobook es la herramienta clave para mostrar tu capacidad actoral, transmitiendo emociones y transformándote en distintos personajes frente a la cámara.",
        bg: "bg-blue-100",
        src:"/photo7.jpeg",
        href: "/servicios/videobook"
    },
    {
        title: "COACH ACTORAL",
        description: "El coaching actoral ofrece un acompañamiento personalizado para que los actores perfeccionen sus habilidades interpretativas y mejoren su manejo de emociones y técnicas escénicas.",
        bg: "bg-blue-100",
        src:"/photo8.jpeg",
        href: "/servicios/coach"
    }
];
---

<section class="text-gray-600 body-font h-max lg:h-screen" id="servicios">
    <div class="container px-5 py-24 mx-auto">
      <div class="flex flex-col">
        <div class="h-1 bg-gray-200 rounded overflow-hidden">
          <div class="w-24 h-full bg-black"></div>
        </div>
        <div class="flex flex-wrap sm:flex-row flex-col py-6 mb-12">
          <h1 class="sm:w-2/5 text-gray-900 font-medium title-font text-2xl mb-2 sm:mb-0">SERVICIOS</h1>
          <p class="sm:w-3/5 leading-relaxed text-base sm:pl-10 pl-0">Cada uno de nuestros servicios está diseñado para impulsar tu carrera y ayudarte a destacarte en la industria audiovisual.</p>
        </div>
      </div>
      <div class="flex flex-wrap sm:-m-4 -mx-4 -mb-10 -mt-4">
       {servicios.map((service) => (

            <Card
                title={service.title}
                description={service.description}
                bg={service.bg}
                href={service.href}
                src={service.src}
            />
        ))}

      </div>
    </div>
  </section>