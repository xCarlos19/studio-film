---

const photos = [
    { src: '/photo1.jpeg', alt: 'Gallery 1' },
    { src: '/photo9.jpeg', alt: 'Gallery 9' },
    { src: '/photo3.jpeg', alt: 'Gallery 3' },
    { src: '/photo12.jpeg', alt: 'Gallery 1' },
    { src: '/photo13.jpeg', alt: 'Gallery 1' },
    { src: '/photo2.jpeg', alt: 'Gallery 3' },
    { src: '/photo16.jpeg', alt: 'Gallery 3' },
    { src: '/photo11.jpeg', alt: 'Gallery 1' }
];
---
<section class="text-gray-600 body-font h-max">
    <div class="container px-5 py-24 mx-auto">
      <div class="flex flex-col">
        <div class="flex flex-wrap sm:flex-row flex-col py-6 ">
          <h1 class="sm:w-2/5 text-gray-900 text-shadow font-medium title-font custom-text mb-2 sm:mb-0">GALERÍA</h1>
        </div>
        <div class="h-1 bg-gray-200 rounded overflow-hidden mb-12">
          <div class="w-80 h-full bg-main"></div>
        </div>
      </div>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        {
            photos.map((photo) => (
               
                    <img class="object-cover h-[450px] w-[300px]" src={photo.src} alt={photo.alt} />
            
            ))
        }

      </div>
      <div class="flex justify-center mt-10">
       
            <a class="px-12 py-4 border-2 rounded-lg font-bold text-black border-black hover:bg-black hover:text-white" href="/galeria">VER MÁS</a>
       
    </div>
    </div>
  </section>
  <style>
    .custom-text{
      font-size: 2.7rem /* 36px */;
      line-height: 3rem;
      letter-spacing: 0.2em;
    }
    @media (max-width: 660px) {
      .custom-text {
        font-size: 2.1rem;
        line-height: 1rem;
        letter-spacing: 0.2em;
      }
    }

    .bg-main {
      background-color: #500606;
    }
    .text-shadow {
        text-shadow: 1px 1px 2px black;
    }
</style>