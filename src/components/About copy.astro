---
import BoxReveal from "./BoxReveal";
import { motion } from "motion/react"
import Slider from "./Slider.astro";
---


 <section class="text-black body-font container px-5 py-24 mx-auto">
  <div class="flex flex-col">
    <div class="flex flex-wrap sm:flex-row flex-col py-6 ">
      <h1 class="sm:w-2/5 text-gray-900 text-shadow font-medium title-font custom-text mb-2 sm:mb-0">QUIENES SOMOS</h1>
    </div>
    <div class="h-1 bg-gray-200 rounded overflow-hidden mb-12">
      <div class="w-80 h-full bg-main"></div>
    </div>
  </div>
    
    
    <article class="flex flex-col sm:flex-row items-center gap-5 mb-10 m-auto w-[90%] ">
     <Slider src="/img-1.webp"></Slider>
    </div> 
    </article>
   
  </section>
  <style>
    .custom-text{
      font-size: 2.7rem /* 36px */;
      line-height: 3rem;
      letter-spacing: 0.2em;
    }

    @media (max-width: 660px) {
      .custom-text {
        font-size: 2.1rem;
        line-height: 1rem;
        letter-spacing: 0.2em;
      }
    }

    .bg-main {
      background-color: #500606;
    }
    .text-shadow {
        text-shadow: 1px 1px 2px black;
    }
</style> 


