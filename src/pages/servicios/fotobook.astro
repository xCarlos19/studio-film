---
import LayoutSecondary from "../../layouts/LayoutSecondary.astro";

const serv = [{
    title: "BASICO",
    price: 60,
    atributtes : [
        "Sesión en estudio",
        "15 fotos editadas",
        "1h 30 min",
        "Varios fondos e iluminaciones"
    ],
    borderColor: "border-gray-400",
    buttonColor: "bg-gray-400"

  },
  {
    title: "INTERMEDIO",
    price: 90,
    atributtes : [
        "Sesión en estudio",
        "25 fotos editadas",
        "2h aproximadamente",
        "Varios fondos e iluminaciones"
    ],
    borderColor: "border-slate-500",
    buttonColor: "bg-slate-500"
  },
  {
    title: "PROFESIONAL",
    price: 180,
    atributtes : [
        "Sesión en estudio",
        "40 Fotos editadas",
        "3h aproximadamente",
        "Varios fondos e iluminaciones",
        "Servicio de maquillaje incluido",
        "Selección de hasta 80 fotos (sin editar)"
    ],
    borderColor: "border-black",
    buttonColor: "bg-black"
  }

  
];

interface Props {
    title: string;
    page: string;
}
---

<LayoutSecondary title="Photobook" page="servicios">
    <section class="text-gray-600 body-font overflow-hidden w-full">
        <div class="container px-5 py-2 mx-auto">
          <div class="flex flex-col text-center w-full mb-16">
            <h1 class="text-3xl sm:text-6xl font-medium title-font mb-2 p-5 text-gray-900">PHOTOBOOK</h1>
            <p class="lg:w-4/5 mx-auto leading-relaxed text-sm sm:text-base text-gray-500 p-2">Destaca tu talento con un photobook actoral personalizado, mostrando tu mejor versión en imágenes profesionales que capturan tu versatilidad y estilo.</p>
            <div class="flex mx-auto border-2 border-black rounded overflow-hidden mt-6">
              <a class="py-1 px-4 bg-black text-white cursor-default">Photobook</a>
              <a class="py-1 px-4 border-r-black border-r-2 cursor-pointer" href="/servicios/videobook">Videobook</a>
              <a class="py-1 px-4 cursor-pointer" href="/servicios/coach">Coach Actoral</a>
            </div>
          </div>
          <div class="flex flex-wrap justify-center mb-2 gap-x-10 w-[80%] md:w-full m-auto">
            
            {
              serv.map((servicio) => (
              <div class="p-4 xl:w-1/4 md:w-1/2 w-full">
              <div class:list={["h-full p-6 rounded-lg border-2  flex flex-col relative overflow-hidden",servicio.borderColor]}>
                <h2 class="text-sm tracking-widest title-font mb-1 font-bold">{servicio.title}</h2>
                <h1 class="text-5xl text-gray-900 leading-none flex items-center pb-4 mb-4 border-b border-gray-200">
                  <span>{servicio.price}€</span>
                  <span class="text-lg ml-1 font-normal text-black">/sesión</span>
                </h1>
                {servicio.atributtes.map((atributte) => (
                  <p class:list={["flex items-center text-black mb-2",
                  atributte === servicio.atributtes[servicio.atributtes.length - 1] && "mb-6"]
                  }>
                  <span class="w-4 h-4 mr-2 inline-flex items-center justify-center bg-black text-white rounded-full flex-shrink-0">
                    <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" class="w-3 h-3" viewBox="0 0 24 24">
                      <path d="M20 6L9 17l-5-5"></path>
                    </svg>
                  </span>{atributte}
                </p>))
                  
                }
                <span class:list={["bg-red-600 text-white px-3 py-1 tracking-widest text-xs absolute right-0 top-0 rounded-bl", 
                  servicio !== serv[serv.length - 1] && "hidden"
                ]}>POPULAR</span>
                <a class:list={["flex items-center mt-auto text-white  border-0 py-2 px-4 w-full focus:outline-none hover:scale-105 duration-150 rounded cursor-pointer", servicio.buttonColor ]} href="/#contacto">Reservar
                  <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 ml-auto" viewBox="0 0 24 24">
                    <path d="M5 12h14M12 5l7 7-7 7"></path>
                  </svg>
                </a>
              </div>
            </div>
              ))
            }
            
          </div>
        </div>
      </section>
</LayoutSecondary>