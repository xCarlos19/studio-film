---
import ButtonBackgroundShine from "../../components/ButtonBackgroundShine";
import LayoutSecondary from "../../layouts/LayoutSecondary.astro";

const serv = [{
    title: "BÁSICO",
    subtittle: "MONÓLOGO",
    price: 200,
    atributtes : [
        "Guión original",
        "Dirección",
        "Ensayo",
        "Rodaje",
        "1 persona en escena",
        "1 plano de cámara",
        "Post-Producción"
    ],
    borderColor: "border-basic",
    buttonColor: "bg-main"

  },
  {
    title: "INTERMEDIO",
    subtittle: "ESCENA",
    price: 300,
    atributtes : [
        "Guión original",
        "Dirección",
        "Ensayo",
        "Rodaje",
        "2 persona en escena",
        "Hasta 4 planos de cámara",
        "Post-Producción"
    ],
    borderColor: "border-inter",
    buttonColor: "bg-main"
  },
  {
    title: "PROFESIONAL",
    subtittle: "COMPLETO",
    price: 425,
    atributtes : [
        "Guión original",
        "Dirección",
        "Ensayo",
        "Rodaje",
        "Escenas con una y dos personas ",
        "Varios planos de cámara",
        "Servicio de maquillaje incluido",
        "2 sets diferentes",
        "Post-Producción"
    ],
    borderColor: "border-main",
    buttonColor: "bg-main"
  }

  
];

interface Props {
    title: string;
    page: string;
}
---

<LayoutSecondary title="Videobook Actoral | STUDIO FILMS 23" page="servicios">
    <section class="text-gray-600 body-font overflow-hidden w-full">
        <div class="container px-5 py-2 mx-auto">
          <div class="flex flex-col text-center w-full mb-16">
            <h1 class="text-3xl sm:text-6xl font-medium title-font mb-2 p-5 text-gray-900">VIDEOBOOK</h1>
            <p class="lg:w-4/5 mx-auto leading-relaxed text-sm sm:text-base text-gray-900 p-2">Un videobook profesional es tu mejor carta de presentación como actor o actriz, mostrando tu talento antes de que los directores de casting te vean en persona.</p>
            <div class="flex mx-auto border-2 border-main rounded overflow-hidden mt-6">
              <a class="py-2 px-4 cursor-pointer" href="/servicios/book">BOOK ACTORAL</a>
              <a class="py-2 px-4 bg-main  text-white cursor-default">VIDEOBOOK ACTORAL</a>
              <a class="py-2 px-4  cursor-pointer" href="/servicios/direccion">DIRECCIÓN ACTORAL</a>
            </div>
          </div>
          <div class="flex flex-wrap justify-center mb-2 gap-x-10 w-[80%] md:w-full m-auto">
            
            {
              serv.map((servicio) => (
              <div class="p-4 xl:w-1/4 md:w-1/2 w-full">
              <div class:list={["h-full p-6 rounded-lg border-2  flex flex-col relative overflow-hidden",servicio.borderColor]}>
                <h1 class="text-2xl sm:text-3xl l-spacing tracking-widest title-font mb-1 font-bold text-black">{servicio.title}</h1>
                <h2 class="text-xl l-spacing tracking-widest title-font mb-4 font-bold text-gray">{servicio.subtittle}</h2>
                
                {servicio.atributtes.map((atributte) => (
                  <p class:list={["flex items-center text-black font-text mb-2",
                  atributte === servicio.atributtes[servicio.atributtes.length - 1] && "mb-6"]
                  }>
                  <span class="w-4 h-4 mr-2 inline-flex items-center justify-center bg-black text-white rounded-full flex-shrink-0">
                    <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" class="w-3 h-3" viewBox="0 0 24 24">
                      <path d="M20 6L9 17l-5-5"></path>
                    </svg>
                  </span>{atributte}
                </p>))
                  
                }
                <span class:list={["bg-red-600 text-white px-3 py-1 tracking-widest text-xs absolute right-0 top-0 rounded-bl", 
                  servicio !== serv[serv.length - 1] && "hidden"
                ]}>POPULAR</span>
                {
                  servicio === serv[serv.length - 1] ? 
                  <ButtonBackgroundShine text="Reservar" path="/contacto" />
                  :
<a class:list={["flex items-center mt-auto text-white  border-0 py-2 px-4 w-full focus:outline-none hover:scale-105 duration-150 rounded cursor-pointer", servicio.buttonColor ]} href="/#contacto">Reservar
                  <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 ml-auto" viewBox="0 0 24 24">
                    <path d="M5 12h14M12 5l7 7-7 7"></path>
                  </svg>
                </a>
                }
              </div>
            </div>
              ))
            }
            
          </div>
        </div>
      </section>
</LayoutSecondary>

<style>
  .bg-main {
    background:  #500606 ;
  } 
  .bg-inter {
    background:  #8B5050 ;
  }
  .bg-basic {
    background:  #AC7474 ;
  }
  .border-inter {
    border: 2px solid #8B5050;
  }
  .border-basic {
    border: 2px solid #AC7474;
  }
  .border-main {
    border: 2px solid #500606;
  }
  .border-l-main{
    border-left: 2px solid #500606;
  }
  .l-spacing {
    letter-spacing: 0.2em;
  }
</style>